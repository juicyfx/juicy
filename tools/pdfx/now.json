{
  "version": 2,
  "scope": "juicyfx",
  "name": "pdfx",
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@now/node",
      "config": {
        "includeFiles": [
          "api/_fonts/**"
        ]
      }
    },
    { "src": "package.json", "use": "@now/static-build" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "^/url/(.*)", "dest": "/api/url.ts" },
    { "src": "^/raw/(.*)", "dest": "/api/raw.ts" },
    { "src": "^/post/(.*)", "dest": "/api/post.ts" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "build": {
    "env": {
      "PDFX_URL": "https://pdfx.jfx.cz"
    }
  }
}
